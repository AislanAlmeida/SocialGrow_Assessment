
@{
    ViewBag.Title = "FotosDoAlbum";
}



<div class="container">
    <div>
        <h5>Galeria de fotos de @ViewBag.Email</h5>
        <h6>Album: @ViewBag.Album</h6>
    </div>

    @if (Session["Email_User"].ToString() == ViewBag.Email)
    {
        <form action="/Galeria/CriarAlbum" method="get">
            <input value="@ViewBag.Album" name="album" class="hidden" />
            <button type="submit" class="btn btn-default">Adicionar Foto</button>
        </form>
    }


    <hr />
    <div class="row">
        @foreach (var item in ViewBag.Fotos)
        {
            <div class="col-md-3 center-block">
                <img src="@item" class="img-thumbnail" style="" />
            </div>
        }
    </div>

</div>


@Html.ActionLink("Voltar", "Index", "Galeria")