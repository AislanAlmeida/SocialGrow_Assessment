@model SolucaoLoginWEB.Models.AlbumModel

@{
    ViewBag.Title = "CriarAlbum";
}

<h2>CriarAlbum</h2>

@using (Html.BeginForm("CriarAlbum","Galeria",FormMethod.Post,new { enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Criando um Album de Fotos</h4>
    <hr />

    <div class="form-group">
        @Html.LabelFor(model => model.Albumfoto, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @if (ViewBag.nomeAlbum != "")
            {
                
                <input class="form-control" type="text" name="AlbumFoto" id="AlbumFoto" value="@ViewBag.nomeAlbum"/>
                
            }
            else
            {
                @Html.EditorFor(model => model.Albumfoto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Albumfoto, "", new { @class = "text-danger" })
            }

        </div>

    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Imagem, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="col-md-10">
                <input class="form-control" type="file" name="FotoAlbum" id="FotoAlbum" />
            </div>
           
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
