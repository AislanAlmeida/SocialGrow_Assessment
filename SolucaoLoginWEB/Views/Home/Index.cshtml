@{
    ViewBag.Title = "SocialGrow";
}

<div class="container" style="padding-bottom:20px;">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="https://img.sunset02.com/sites/default/files/image/2016/09/main/veggies-upfront.jpg" alt="SocialGrow" style="width:100%;max-height:450px;">
                <div class="carousel-caption">
                    <h3>SocialGrow</h3>
                    <p>Conectando Hortas Indoor por aí...</p>
                </div>
            </div>

            <div class="item">
                <img src="https://www.pigonthestreet.com/wp-content/uploads/2018/10/front-yard-vegetable-garden-design-ideas.jpg" alt="Chicago" style="width:100%;max-height:450px;">
                <div class="carousel-caption">
                    <h3>SocialGrow</h3>
                    <p>Conectando Hortas Indoor por aí...</p>
                </div>
            </div>

            <div class="item">
                <img src="https://www.thisbluecube.com/wp-content/uploads/2017/04/vegetable-garden.jpg" alt="New york" style="width:100%;max-height:450px;">
                <div class="carousel-caption">
                    <h3>SocialGrow</h3>
                    <p>Conectando Hortas Indoor por aí...</p>
                </div>
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    @if (Session["Email_User"] != null && Session["Email_User"].ToString() != "")
    {
        <div class="jumbotron" style="margin-top:15px">
            <div class="row">
                <div class="col-md-2">
                    <img src="@Session["PictureUrl"]" width="150px" height="auto" style="border-radius:20px" />
                </div>
                <div class="col col-md-10">
                    
                    <h3>Bem Vindo de Volta @Session["Email_User"].ToString()</h3>
                </div>
            </div>
        </div>
    }
    <div class="row" style="margin-top:15px">
        <div class="jumbotron" style="background:url(https://neilpatel.com/wp-content/uploads/2017/07/growsite.jpg);background-size:cover;background-position:center; ">
            <h1>Social Grow</h1>
            <p class="lead">A Rede social favorita dos cultivadores indoor do Brasil</p>
            <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
        </div>
    </div>



    <div class="row">
        <div class="col-md-3">
            <h2>Cadastre-se</h2>
            <p>
                Cadastre-se e se torne mais um membro desta comunidade fantástica.
            </p>
            @Html.ActionLink("Cadastre-se", "Index", "Registro", null, new { @class = "btn btn-default" })
        </div>
        <div class="col-md-3">
            <h2>Login</h2>
            <p>Clique abaixo para fazer login</p>
            @Html.ActionLink("Login", "Index", "Login", null, new { @class = "btn btn-default" })

        </div>
        <div class="col-md-3">
            <h2>Alterar Perfil</h2>
            <p>Clique aqui para editar seu perfil</p>
            @Html.ActionLink("Alterar Perfil", "Index", "GerenciarPerfil", null, new { @class = "btn btn-default" })

        </div>
        <div class="col-md-3">
            <h2>Meus Amigos</h2>
            <p>Clique aqui para ver seus amigos e solicitações pendentes</p>
            @Html.ActionLink("Ver amigos", "Index", "Amigos", null, new { @class = "btn btn-default" })

        </div>
    </div>

</div>


