@model SolucaoLoginWEB.Models.PerfilModel

@{
    ViewBag.Title = "Perfil";
}

<h2>Alterar Meu Perfil</h2>

@using (Html.BeginForm("Index","GerenciarPerfil",FormMethod.Post, new { enctype="multipart/form-data"}))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h5>Usuario: @Html.DisplayFor(model => model.EmailUser)</h5>
    <div style="padding:15px;"><img src=@Model.PictureUrl style="max-height:145px" class="img-rounded" /></div>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <div class="col-md-10">
            @Html.EditorFor(model => model.EmailUser, new { htmlAttributes = new { @class = "hidden" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.EditorFor(model => model.AccountNumber, new { htmlAttributes = new { @class = "hidden" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Sobrenome, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Sobrenome, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Sobrenome, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PictureUrl, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input class="form-control" type="file" name="FotoPerfil" id="FotoPerfil" />
           
        </div>
        
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Aniversario, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Aniversario ,new { htmlAttributes = new { @class = "form-control" , @type = "date"} })
            <p>Anterior: @Html.DisplayFor(model => model.Aniversario) </p>
            @Html.ValidationMessageFor(model => model.Aniversario, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Alterar Perfil" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Voltar para o Inicio", "Index", "Home")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
